docker run -d \
  -it \
  --name devtest \
  -v ~/Projects/Docker/config/nginx.conf:/etc/nginx/nginx.conf:ro\
  -v ~/Projects/Docker/html:/usr/share/nginx/html\
  -v ~/Projects/Docker/config/.htpasswd:/etc/nginx/conf.d/.htpasswd:ro\
  -p 5000:80 \
  nginx:latest

docker ps

docker exec -it devtest nginx -s reload

